            <ImageView fitHeight="38.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/log-in.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <ImageView fitHeight="30.0" fitWidth="22.0" layoutX="252.0" layoutY="182.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../icons/account.png" />
         </image>
      </ImageView>
      <ToggleButton fx:id="btn_SifreGoster" layoutX="244.0" layoutY="224.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="36.0">
         <graphic>
            <ImageView fitHeight="26.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/hide_password.png" />
               </image>
            </ImageView>
         </graphic></ToggleButton>
   </children>
