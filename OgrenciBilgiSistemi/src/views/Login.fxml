<AnchorPane fx:id="anchor_Login" prefHeight="366.0" prefWidth="323.0" stylesheets="@../css/login-style.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
   <children>
      <AnchorPane prefHeight="157.0" prefWidth="323.0">
         <children>
            <Label layoutX="34.0" layoutY="121.0" text="ÖĞRENCİ BİLGİ SİSTEMİ GİRİŞ">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <ImageView fitHeight="79.0" fitWidth="116.0" layoutX="124.0" layoutY="22.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/student.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
      <TextField fx:id="txt_KullaniciAd" layoutX="38.0" layoutY="174.0" prefHeight="37.0" prefWidth="248.0" promptText="Kullanıcı Adı Giriniz...">
