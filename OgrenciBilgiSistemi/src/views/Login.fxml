            <Font name="System Bold" size="16.0" />
         </font>
      </TextField>
      <PasswordField fx:id="passField_Sifre" layoutX="38.0" layoutY="220.0" prefHeight="37.0" prefWidth="248.0" promptText="Şifre Giriniz...">
