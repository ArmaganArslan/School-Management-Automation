            <Font name="System Bold" size="16.0" />
         </font>
      </PasswordField>
      <Button fx:id="btn_Giris" layoutX="142.0" layoutY="283.0" mnemonicParsing="false" onAction="#btn_Giris_Click" prefHeight="39.0" prefWidth="45.0">
